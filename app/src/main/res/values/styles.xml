<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSurf</item>
        <item name="editTextColor">@color/toolBarBack</item>
        <item name="android:theme">@android:style/Theme.Black.NoTitleBar</item>
        <item name="alertDialogTheme">@style/YDialog</item>
        <item name="android:itemBackground">@color/colorSurf</item>
        <item name="android:itemTextAppearance">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="styleMenu" parent="Theme.MaterialComponents.Light.DarkActionBar">
    </style>


    <style name="floating_la">
        <item name="helperTextColor">   #ffffffff   </item>
        <item name="errorColor">        #FF575D     </item>
        <item name="android:textSize">  12sp        </item>
        <item name="secondaryColor">    #61FFFFFF   </item>
        <item name="primaryColor">      #1EF0D7     </item>
    </style>


    <style name="input_text">
        <item name="android:textSize">  16sp        </item>
        <item name="android:textColor"> #ffffffff   </item>
    </style>

    <style name="Toolbar" >
        <item name="android:layout_height">     ?attr/actionBarSize     </item>
        <item name="android:background">        @color/toolBarBack  </item>
        <item name="android:layout_width">      match_parent        </item>
        <item name="android:textColor">         @color/white        </item>
    </style>





    <style name="detailTitle">
        <item name="android:textSize">  24sp    </item>
        <item name="android:textColor"> #FFFFFF </item>
    </style>


    <style name="DarkProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/darkSlateGrey</item>
        <item name="android:color">@color/darkSlateGrey</item>
    </style>



    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">

        <item name="android:fillColor">@color/darkSlateGrey</item>

        <item name="android:textColor">@color/darkSlateGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">@color/darkSlateGrey</item>

        <item name="android:textColorPrimary">@color/darkSlateGrey</item>
        <item name="android:windowBackground">@color/darkSlateGrey</item>
        <item name="colorControlNormal">@color/darkSlateGrey</item>
        <item name="colorControlActivated">@color/darkSlateGrey</item>
        <item name="textColorAlertDialogListItem">@color/darkSlateGrey</item>


    </style>


    <style name="YDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <!-- Base colors -->
        <item name="android:textColorPrimary">@color/dialog_text</item>
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="colorControlNormal">@color/dialog_checkbox</item>
        <item name="colorControlActivated">@color/dialog_checkbox_activated</item>
        <item name="textColorAlertDialogListItem">@color/dialog_list_item</item>

        <!-- Button styles -->
        <item name="buttonBarPositiveButtonStyle">@style/YDialogPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/YDialogNegativeButton</item>

        <!-- Sizes -->
        <item name="android:lineSpacingExtra">@dimen/dialog_line_spacing</item>
        <item name="android:textSize">@dimen/dialog_text_size</item>
        <item name="android:windowTitleStyle">@style/YDialogTitleTextAppearance</item>
    </style>

    <style name="YDialogButton" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dialog_button</item>
        <item name="android:textSize">@dimen/dialog_buttons_size</item>
    </style>

    <style name="YDialogPositiveButton" parent="YDialogButton">
        <item name="android:textColor">@color/dialog_accent_button</item>
    </style>

    <style name="YDialogNegativeButton" parent="YDialogButton">
        <item name="android:textColor">@color/dialog_accent_button</item>
    </style>

    <style name="YDialogTitleTextAppearance" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">@dimen/dialog_title_size</item>
    </style>

    <dimen name="dialog_line_spacing">2dp</dimen>
    <dimen name="dialog_title_size">20sp</dimen>
    <dimen name="dialog_text_size">16sp</dimen>
    <dimen name="dialog_buttons_size">14sp</dimen>


</resources>
