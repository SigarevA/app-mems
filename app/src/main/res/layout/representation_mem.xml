<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_item_mem"
    android:elevation="2dp">

    <ImageView
        android:id="@+id/img_mem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toTopOf="@id/title_mem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_mem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:background="@drawable/bg_action_mem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_mem"
        android:layout_marginStart="8dp"
        />

    <ImageView
        android:id="@+id/like"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_favorite"
        app:layout_constraintTop_toBottomOf="@id/title_mem"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="@string/like"
        android:background="@drawable/bg_action_mem"
        android:clickable="true"
        android:focusable="true" />

    <ImageView
        android:id="@+id/share"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_share"
        app:layout_constraintHorizontal_bias="0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/title_mem"
        app:layout_constraintStart_toEndOf="@id/like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_action_mem"
        android:clickable="true"
        />

</androidx.constraintlayout.widget.ConstraintLayout>